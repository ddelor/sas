{% extends 'galleryBundle::layout_admin.html.twig' %}

{% block content %}
    <h1>Expositions</h1>
    <a href="{{ path('event_new') }}"> + Ajouter</a>
    <a href="{{ path('admin') }}"><< Retour à l'accueil</a>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Catégorie</th>
                <th>Année</th>
                <th>Expo 1</th>
                {# <th>Lien 1</th>
                <th>URL 1</th> #}
                <th>Expo 2</th>
                {# <th>Lien 2</th>
                <th>URL 2</th> #}
                <th>Expo 3</th>
                {# <th>Lien 3</th>
                <th>URL 3</th> #}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('event_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.category }}</td>
                <td>{{ entity.year }}</td>
                <td>{{ entity.expo1 }}</td>
                {# <td>{{ entity.link1 }}</td>
                <td>{{ entity.url1 }}</td> #}
                <td>{{ entity.expo2 }}</td>
                {# <td>{{ entity.link2 }}</td>
                <td>{{ entity.url2 }}</td> #}
                <td>{{ entity.expo3 }}</td>
                {# <td>{{ entity.link3 }}</td>
                <td>{{ entity.url3 }}</td> #}
                <td>
                <ul>
                    <li>
                        <a href="{{ path('event_show', { 'id': entity.id }) }}">Voir</a>
                    </li>
                    <li>
                        <a href="{{ path('event_edit', { 'id': entity.id }) }}">Editer</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
