{% extends 'galleryBundle::layout_admin.html.twig' %}

{% block content %}
    <h1>Travail</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ entity.category }}</td>
            </tr>
            <tr>
                <th>Sous-catégorie</th>
                <td>{{ entity.subCategory }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ entity.img }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Technique</th>
                <td>{{ entity.techno }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ entity.size }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ entity.year }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ entity.comment }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('work') }}">
            << Retour à la liste
        </a>
    </li>
    <li>
        <a href="{{ path('work_edit', { 'id': entity.id }) }}">
            Editer
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
