{% extends 'galleryBundle::layout_admin.html.twig' %}

{% block content %}
    <h1>Travaux</h1>
    <a href="{{ path('work_new') }}"> + Ajouter</a>
    <a href="{{ path('admin') }}"><< Retour à l'accueil</a>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Catégorie</th>
                <th>Sous-catégorie</th>
                {# <th>Image</th> #}
                <th>Titre</th>
                <th>Technique</th>
                <th>Taille</th>
                <th>Année</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('work_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.category }}</td>
                <td>{{ entity.subCategory }}</td>
                {# <td>{{ entity.img }}</td> #}
                <td>{{ entity.title }}</td>
                <td>{{ entity.techno }}</td>
                <td>{{ entity.size }}</td>
                <td>{% if entity.year %}{{ entity.year }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('work_show', { 'id': entity.id }) }}">Voir</a>
                    </li>
                    <li>
                        <a href="{{ path('work_edit', { 'id': entity.id }) }}">Editer</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
